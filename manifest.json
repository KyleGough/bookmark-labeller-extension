{
  "manifest_version": 2,
  "name": "Bookmark Labeller",
  "autor": "Kyle Gough",
  "version": "1.0.0",
  "description": "Label bookmarks with emojis",
  "browser_action": {
    "default_icon": "src/icon.svg",
    "default_title": "Bookmark Labeller",
    "default_popup": "src/index.html"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
  "permissions": [
    "<all_urls>",
    "bookmarks",
    "menus",
    "storage",
    "tabs"
  ]
}
